.panel.panel-default
  .list-group
    link-to "stations.weighticket.edit" model.weighticketId classNames="list-group-item list-group-item-success instruction-line"
      i.fa.fa-check
      span.fa create a weight ticket for the truck

    link-to "stations.weighticket.print" model.weighticketId classNames="list-group-item list-group-item-success instruction-line"
      i.fa.fa-check
      span.fa print out the weighticket and instruction sheet

  .panel-heading.instruction-line
    span.fa give the ticket to the driver
      
  .panel-body.instruction-line
    p.capitalize so the driver knows which loading dock to head to
    dl
      dt weighticketId
      dd= model.weighticketId
      dt arrivedAt
      dd= model.arrivedAt
      dt status
      dd= model.status
      dt origination
      dd= model.origination
      dt origintype
      dd= model.origintype
      dt destination
      dd= model.destination
      dt destinytype
      dd= model.destinytype
    if mistakes
      p.capitalize
        span.fa the system has encountered the following errors
        span.fa= mistakes
    dl
      each mistake in mistakes
        dt= mistake.key
        dd= mistake.value

    .btn-group
      promise-button model=model classNames="btn btn-success btn-hover btn-lg" action="finish"
        i.fa.fa-check
        span.capitalize finish
      link-to "stations.station.problem" model.weighticket.issuerId class="btn btn-danger btn-hover btn-lg"
        i.fa.fa-warning
        span.capitalize report problem